  Cinsiyet <- "Kadın"
  print("K olarak girilmiş olan cinsiyet bilgisi \"Kadın\" olarak yeniden düzenlendi.")
} else {
  Cinsiyet <- "Erkek"
  print("E olarak girilmiş olan cinsiyet bilgisi \"Erkek\" olarak yeniden düzenlendi.")
}


