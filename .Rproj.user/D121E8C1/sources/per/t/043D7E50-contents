x = NA



if (x == 0){
  print("0'dan farklı bir değer girilmelidir.")

  } else if (sign(x) == -1 & (x %% 2 == 0)){
  print("Girilen dağer negatif çift sayıdır.")
 
  } else if(sign(x) == -1 & (x %% 2 == 1)){
  print("Girilen değer negatif tek sayıdır.")  

  } else if (sign(x) == 1 & (x %% 2 == 0)){
  print("Girilen değer pozitif çift sayıdır.")
 
 } else {
  print("Girilen değer pozitif tek sayıdır.")
 }


# x değeri tanımlanır.
# 1.1 x değeri NA ise (boş birdeğer tanımlanmış ise)
# .......
# .......
# .......
# 1.2 x değeri ölçülmüs ise
# 1.2.1 x değeri 0 ise
# .......
# 1.2.2 x değeri negatif tek sayı ise
# .......
# 1.2.3 x değeri negatif çift sayı ise
# .......
# 1.2.4 x değeri pozitif tek sayı ise
# .......
# 1.2.5 x değeri pozitif çift sayı ise
# .......

x <- 0

# 1. kontrol kademesi
if (is.na(x)){
  # 1.1
  print("x değeri boş değer girilemez.")
} else {
  # 1.2
  if (x == 0){
    # 1.2.1
    print("0'dan farklı bir değer girilmelidir.")
  } else if (sign(x) == -1 & (x %% 2 == 0)){
    # 1.2.2
    print("Girilen değer negatif çift sayıdır.")
  } else if (sign(x) == -1 & (x %% 2 == 1)){
    # 1.2.3
    print("Girilen değer negatif tek sayıdır.")
  } else if (sign(x) == 1 & (x %% 2 == 0)){
    # 1.2.4
    print("Girilen değer pozitif çift sayıdır.")
  } else {
    # 1.2.5
    print("Girilen değer pozitif tek sayıdır.")
  }
}

